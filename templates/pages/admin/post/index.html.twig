{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	Liste des articles
{% endblock %}

{% block description %}
	Liste des articles
{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
	<link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.css" rel="stylesheet">
	<script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>
	<script>
		$(document).ready(function () {
$('#table').DataTable({
language: {
url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
}
});
});
	</script>
{% endblock %}


{% block main %}
	<h1 class="text-center my-3 display-5">Liste des articles</h1>

	{% include 'components/alert.html.twig' %}

	<div class="d-flex justify-content-end align-items-center my-3">
		<a href="{{path('admin_post_create')}}" class="btn btn-primary shadow">
			<i class="fa-solid fa-plus"></i>
			Nouvel article</a>
	</div>

    <div class="table-responsive">
		<table id="table" class="table table-striped table-hover text-center">

			<thead class="table-dark">
				<tr>
					<th>Id</th>
					<th>Image</th>
					<th>Titre</th>
					<th>Description</th>
					<th>Catégorie</th>
					<th>Publié le</th>
					<th>Contenu</th>
					<th>Créer le</th>
					<th>Modifié le</th>
					<th>Options</th>
				</tr>
			</thead>

			<tbody>
				{% for post in posts %}
					<tr>
						<td>{{post.id}}</td>
						<td>
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}" class="">
                            {% else %}
                                <p>---</p>
                            {% endif %}
                        </td>
						<td>{{post.title}}</td>
						<td>{{post.description}}</td>
						<td>{{post.category.name}}</td>
						<td>{{post.publishedAt|format_date()}}</td>
                        <td>{{post.content}}</td>
						<td>{{post.createdAt|format_date()}}</td>
						<td>{{post.updatedAt|format_date()}}</td>
                        <td></td>

						{# <td>
							<a href="{{path('admin_post_edit', {'id':post.id})}}" class="text-secondary mx-2" title="Modifier {{post.name}}">
								<i class="fas fa-edit"></i>
							</a>

							<a onclick="event.preventDefault(); return confirm('Confirmer la supression de cette catégorie?') && document.querySelector('#delete_post_{{post.id}}_form').submit();" href="#" class="text-danger mx-2">
								<i class="fa-solid fa-trash-can"></i>
							</a>
							<form id="delete_post_{{post.id}}_form" method="POST" action="{{path('admin_post_delete', {'id':post.id})}}">
								<input type="hidden" name="_method" value="DELETE">
								<input type="hidden" name="csrf_token" value="{{csrf_token('delete_post_'~post.id)}}">
							</form>
						</td> #}
                        
					</tr>
				{% endfor %}
			</tbody>

		</table>
	</div>
{% endblock %}
